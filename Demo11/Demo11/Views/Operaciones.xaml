<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo11.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingresa Valor 1"
                   Text="{Binding ValorA}">
            </Entry>
            <Entry Placeholder="Ingresa Valor 2"
                   Text="{Binding ValorB}">
            </Entry>

            <Button Text="Sumar" Command="{Binding Sumar}"/>
            <Button Text="Restar" Command="{Binding Restar}"/>
            <Button Text="Multiplicar" Command="{Binding Multiplicar}"/>

            <Label Text="{Binding ResultadoS}" FontSize="50"/>
            <Label Text="{Binding ResultadoR}" FontSize="50"/>
            <Label Text="{Binding ResultadoM}" FontSize="50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>